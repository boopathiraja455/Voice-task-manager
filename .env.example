# Task Management Application Environment Variables
# Copy this file to .env and configure your settings

# ====================
# JSON DATA FILE PATHS
# ====================
# Path to the main tasks data file (relative to project root)
TASKS_DATA_PATH=public/data/tasks.json

# Path to application settings file
SETTINGS_PATH=public/data/settings.json

# Path to user preferences cache
USER_PREFERENCES_PATH=public/data/user-preferences.json

# Directory for automatic backups (relative to project root)
BACKUP_DIRECTORY=public/data/backups

# Directory for exported files
EXPORT_DIRECTORY=public/data/exports

# ====================
# DATABASE CONFIGURATION
# ====================
# MongoDB connection string (for future database connectivity)
# Format: mongodb://username:password@host:port/database
# For local MongoDB: mongodb://localhost:27017/taskmanager
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/taskmanager
DATABASE_URL=

# Alternative database URLs for different environments
DATABASE_URL_DEV=mongodb://localhost:27017/taskmanager_dev
DATABASE_URL_TEST=mongodb://localhost:27017/taskmanager_test
DATABASE_URL_PROD=

# Database connection pool settings
DB_MAX_POOL_SIZE=10
DB_MIN_POOL_SIZE=2
DB_CONNECTION_TIMEOUT=5000

# ====================
# APPLICATION SETTINGS
# ====================
# Default system volume (0.0 to 1.0)
DEFAULT_SYSTEM_VOLUME=0.7

# Default announcement times (comma-separated 24-hour format)
# Times when the system should announce due tasks
ANNOUNCEMENT_TIMES=09:00,13:00,17:00,21:00

# Application timezone (default: system timezone)
APP_TIMEZONE=

# Default task view mode (all, due-today, overdue, completed, by-category)
DEFAULT_VIEW_MODE=due-today

# Enable/disable automatic announcements on startup
AUTO_ANNOUNCEMENTS_ENABLED=true

# Interval for checking due tasks (in minutes)
TASK_CHECK_INTERVAL=5

# ====================
# FILE SYSTEM SETTINGS
# ====================
# Enable automatic backups of tasks data
BACKUP_ENABLED=true

# Backup frequency (daily, weekly, hourly)
BACKUP_FREQUENCY=daily

# Maximum number of backup files to keep
MAX_BACKUP_FILES=30

# Enable file system cache for improved performance
CACHE_ENABLED=true

# Cache size limit in MB
CACHE_SIZE_MB=50

# Cache expiration time in minutes
CACHE_EXPIRATION_MINUTES=30

# Automatic file compression for backups
BACKUP_COMPRESSION=true

# File watch enabled (automatically reload data when files change)
FILE_WATCH_ENABLED=true

# ====================
# VOICE SYNTHESIS SETTINGS
# ====================
# Default voice for speech synthesis
# Leave empty to use system default
# Example values:
# - "Microsoft Zira Desktop" (Windows)
# - "Microsoft David Desktop" (Windows)
# - "Alex" (macOS)
# - "Google US English" (Chrome)
DEFAULT_VOICE_NAME=

# Default voice URI (browser-specific voice identifier)
# This takes precedence over DEFAULT_VOICE_NAME if set
DEFAULT_VOICE_URI=

# Speech rate (0.1 to 10, default: 1.0)
SPEECH_RATE=1.0

# Speech pitch (0.0 to 2.0, default: 1.0)
SPEECH_PITCH=1.0

# Speech volume (0.0 to 1.0, default: 1.0)
SPEECH_VOLUME=1.0

# Language code for speech synthesis (e.g., 'en-US', 'en-GB')
SPEECH_LANGUAGE=en-US

# Enable SSML (Speech Synthesis Markup Language) if supported
SSML_ENABLED=false

# Voice selection preference order (comma-separated)
# System will try voices in this order
VOICE_PREFERENCE_ORDER=Microsoft Zira Desktop,Microsoft David Desktop,Google US English,Alex

# ====================
# NOTIFICATION SETTINGS
# ====================
# Enable browser notifications for due tasks
BROWSER_NOTIFICATIONS_ENABLED=true

# Notification permission request on first load
REQUEST_NOTIFICATION_PERMISSION=true

# Show notification for overdue tasks
NOTIFY_OVERDUE_TASKS=true

# Notification sound enabled
NOTIFICATION_SOUND_ENABLED=true

# Custom notification sound file path
NOTIFICATION_SOUND_PATH=

# ====================
# PERFORMANCE SETTINGS
# ====================
# Enable lazy loading for large task lists
LAZY_LOADING_ENABLED=true

# Number of tasks to load per page/batch
TASKS_PER_PAGE=50

# Enable virtual scrolling for large lists
VIRTUAL_SCROLLING_ENABLED=true

# Debounce delay for search input (milliseconds)
SEARCH_DEBOUNCE_MS=300

# Enable service worker for offline functionality
SERVICE_WORKER_ENABLED=false

# ====================
# SECURITY SETTINGS
# ====================
# API rate limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=100

# Enable CORS for cross-origin requests
CORS_ENABLED=true

# Allowed origins for CORS (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Enable request logging
REQUEST_LOGGING_ENABLED=false

# Maximum file upload size in MB
MAX_UPLOAD_SIZE_MB=10

# ====================
# DEVELOPMENT SETTINGS
# ====================
# Environment mode (development, production, test)
NODE_ENV=development

# Enable debug logging
DEBUG_MODE=false

# Enable hot reload for data files in development
HOT_RELOAD_DATA=true

# Show performance metrics in development
SHOW_PERFORMANCE_METRICS=false

# Enable React strict mode
REACT_STRICT_MODE=true

# ====================
# EXPORT/IMPORT SETTINGS
# ====================
# Default export format (json, csv, xml)
DEFAULT_EXPORT_FORMAT=json

# Include completed tasks in exports by default
EXPORT_INCLUDE_COMPLETED=true

# Include task history in exports
EXPORT_INCLUDE_HISTORY=false

# Maximum export file size in MB
MAX_EXPORT_SIZE_MB=25

# Enable automatic export scheduling
AUTO_EXPORT_ENABLED=false

# Auto export frequency (daily, weekly, monthly)
AUTO_EXPORT_FREQUENCY=weekly

# ====================
# THEME AND UI SETTINGS
# ====================
# Default theme (dark, light, system)
DEFAULT_THEME=system

# Enable theme persistence
PERSIST_THEME=true

# Default color scheme (neon, classic, minimal)
DEFAULT_COLOR_SCHEME=neon

# Enable animations and transitions
ANIMATIONS_ENABLED=true

# Compact mode for mobile devices
MOBILE_COMPACT_MODE=true

# Show task categories in navigation
SHOW_CATEGORIES_NAV=true